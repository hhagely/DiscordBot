{
	"compilerOptions": {
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"module": "commonjs",
		"target": "es2017",
		"lib": ["es2017"],
		"declaration": true,
		"sourceMap": true,
		"removeComments": false,
		"experimentalDecorators": true
	},
	"exclude": ["node_modules", "jspm_packages", "tmp", "temp", "dist", "pkg"]
}
